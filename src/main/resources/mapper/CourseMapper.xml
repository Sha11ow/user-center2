<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shu.usercenter2.mapper.CourseMapper">

    <resultMap id="BaseResultMap" type="com.shu.usercenter2.domain.Course">
            <id property="course_id" column="course_id" jdbcType="INTEGER"/>
            <result property="course_name" column="course_name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectByCourseInfo" resultMap="BaseResultMap">
        SELECT *
        FROM course
        <where>
            <if test="courseId != null">
                course_id = #{courseId}
            </if>
            <if test="courseName != null">
                <choose>
                    <when test="courseId != null">
                        AND course_name = #{courseName}
                    </when>
                    <otherwise>
                        course_name = #{courseName}
                    </otherwise>
                </choose>
            </if>
        </where>
    </select>

    <sql id="Base_Column_List">
        course_id,course_name
    </sql>
</mapper>
